<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    tools:context=".Catalogo"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tituloProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion del Producto"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/campoCantidad"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Cantidad"
                android:inputType="numberDecimal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/campoUnidadC"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Unidad de Medida"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/campoPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Precio Compra"
                android:textSize="18sp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/moneda"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Moneda"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/precioTotal"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center"
                android:inputType="none|numberDecimal"
                android:text="Precio Total"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonAceptar"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                             android:text="Aceptar" />

            <Button
                android:id="@+id/botonCancelar"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="Cancelar" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>